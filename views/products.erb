<h2>Available products:</h2>
<br/>
<div class="container text-center">
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div>
        <strong>Title:</strong> <%= product.title %> 
      </div>
      <div>
        <img src="<%= product.path_to_image %>" alt=<%= product.title %>>
      </div>
      <div>
        <strong>Description:</strong> <%= product.description %> 
      </div>
      <div>
        <strong>Size:</strong> <%= product.size %>
      </div>
      <div>
        <strong>Price:</strong> <%= product.price %> ruble(s) 
      </div>
      <br/>
      <div>
        <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= product.id %>)">Add to cart</button>
      </div>
    </div>
  <% end %>
        <button class="btn btn-sm btn-success" onclick="total()">Total items in cart</button>
  </div>
</div>

<script type="text/javascript">
$(function() {
  update_orders_input();
  update_orders_button();
});
</script>
